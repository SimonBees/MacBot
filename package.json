{
  "name": "macbot",
  "version": "1.0.0",
  "description": "macOS AI Assistant",
  "main": "out-electron/main/index.js",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "build": "npm run build:vite && npm run build:electron && electron-builder",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:mac": "npm run build && electron-builder --mac --publish never",
    "preview": "vite preview"
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.2"
  },
  "build": {
    "appId": "com.macbot.ai",
    "productName": "MacBot",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "out-electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "out-electron/main/index.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github"
    }
  }
}
